@page
@model aspcore.Pages.EditBugModel
@{

}
<h1>Edit Bugs</h1>
<form method="post" >
    <div class="row form-group">
        <div class="col-8">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="selectedBug.name">

            <label for="">Description</label>
            <input type="text" class="form-control" asp-for="selectedBug.description">
            <input type="checkbox" class="form-check-input" asp-for="selectedBug.isDone"> Is Done

            <button class="btn btn-primary m-2" >Save</button>
        </div>
    </div>
</form>